<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="convertir pesos mexicanos a otras divisas"
        tools:layout_editor_absoluteX="74dp"
        tools:layout_editor_absoluteY="2dp" />

    <EditText
        android:id="@+id/editTextpesosMexicanos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:minHeight="48dp"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        tools:layout_editor_absoluteX="101dp" />

    <Button
        android:id="@+id/buttonCalcular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="cambiar divisa"
        app:layout_constraintTop_toBottomOf="@+id/editTextpesosMexicanos"
        tools:layout_editor_absoluteX="130dp" />

    <TextView
        android:id="@+id/Dolares"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="dolares"
        app:layout_constraintTop_toBottomOf="@+id/buttonCalcular"
        tools:layout_editor_absoluteX="83dp" />

    <TextView
        android:id="@+id/Yenes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="yenes"
        app:layout_constraintTop_toBottomOf="@+id/Dolares"
        tools:layout_editor_absoluteX="83dp" />

    <TextView
        android:id="@+id/PesosChilenos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="pesos chilenos"
        app:layout_constraintTop_toBottomOf="@+id/Yenes"
        tools:layout_editor_absoluteX="83dp" />

    <TextView
        android:id="@+id/LibrasEsterlinas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="libras esterlinas"
        app:layout_constraintTop_toBottomOf="@+id/PesosChilenos"
        tools:layout_editor_absoluteX="83dp" />

</android.support.constraint.ConstraintLayout>